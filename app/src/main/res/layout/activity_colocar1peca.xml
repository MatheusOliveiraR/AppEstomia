            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txt6"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:text="Retirar o papel da parte adesiva e colar  a bolsa (fechada com o clipe) de baixo para cima, procurando encaixá-la na estomia. "
                android:textColor="@color/letras"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/txt5"
                app:layout_constraintTop_toBottomOf="@+id/txt5" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txt7"
