                app:layout_constraintTop_toBottomOf="@id/txtt6" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt8"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:text="Adaptar a placa de baixo para cima, parte por parte, procurando encaixá-la no estoma, do centro para a extremidade. "
                android:textColor="@color/letras"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/txtt7"
                app:layout_constraintTop_toBottomOf="@id/txtt7" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passo 5"
                android:textColor="@color/letras"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txtt8"
                app:layout_constraintTop_toBottomOf="@id/txtt8" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt10"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:text="Encaixar a bolsa na placa."
                android:textColor="@color/letras"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txtt9"
                app:layout_constraintTop_toBottomOf="@id/txtt9" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passo 6"
                android:textColor="@color/letras"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txtt10"
                app:layout_constraintTop_toBottomOf="@id/txtt10" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt12"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:text="Retirar o ar de dentro da bolsa e coloque o clipe para fechar. "
                android:textColor="@color/letras"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txtt11"
                app:layout_constraintTop_toBottomOf="@id/txtt11" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passo 7"
                android:textColor="@color/letras"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txtt12"
                app:layout_constraintTop_toBottomOf="@id/txtt12" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/txtt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se você usar o cinto, coloque-o por último."
                android:textColor="@color/letras"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txtt13"
                app:layout_constraintTop_toBottomOf="@id/txtt13" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/aumenta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
