<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".Nariane">

    <ImageView
        android:id="@+id/imageView62"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voltar"
        app:srcCompat="@drawable/fundo_passo" />

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageView
        android:id="@+id/fotoNariane"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/nari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView62" />

    <TextView
        android:id="@+id/nomeNariane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nariani Galvão"
        android:textColor="@color/letras"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView62"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView62"
        app:layout_constraintTop_toBottomOf="@+id/fotoNariane" />

    <TextView
        android:id="@+id/emailNariane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="narigalvao@ufam.edu.br"
        android:textColor="@color/letras"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/nomeNariane"
        app:layout_constraintStart_toStartOf="@+id/nomeNariane"
        app:layout_constraintTop_toBottomOf="@+id/nomeNariane" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textoNariane"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Doutora em Ciências pela Universidade de São Paulo (2016). Desde 2009 é Professora Adjunto da Escola de Enfermagem de  Manaus da Universidade Federal do Amazonas. Tem experiência no ensino nas disciplinas de Sistematização da Assistência de Enfermagem , Semiologia e Semiotécnica. Desenvolve pesquisas na área de: Enfermagem em Estomaterapia                      "
        android:textColor="@color/letras"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView62"
        app:layout_constraintEnd_toEndOf="@+id/imageView62"
        app:layout_constraintStart_toStartOf="@+id/imageView62"
        app:layout_constraintTop_toBottomOf="@+id/emailNariane"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>