<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".Matheus">

    <ImageView
        android:id="@+id/imageView62"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backM"
        app:srcCompat="@drawable/fundo_passo" />

    <ImageView
        android:id="@+id/backM"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageView
        android:id="@+id/matheusFoto"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/matheus"
        app:layout_constraintEnd_toEndOf="@+id/imageView62"
        app:layout_constraintStart_toStartOf="@+id/imageView62"
        app:layout_constraintTop_toTopOf="@+id/imageView62" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/MatheusNome"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Matheus de Oliveira"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView62"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView62"
        app:layout_constraintTop_toBottomOf="@+id/matheusFoto" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView119"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="matheus_orbotafogo@hotmail.com"
        android:textColor="@color/letras"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/MatheusNome"
        app:layout_constraintStart_toStartOf="@+id/MatheusNome"
        app:layout_constraintTop_toBottomOf="@+id/MatheusNome" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/textView120"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Desenvolvedor Júnior e Discente do curso de Ciência da Computação da Universidade Estadual do Paraná (UNESPAR) - Campus Apucarana"
        android:textColor="@color/letras"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView62"
        app:layout_constraintEnd_toEndOf="@+id/imageView62"
        app:layout_constraintStart_toStartOf="@+id/imageView62"
        app:layout_constraintTop_toBottomOf="@+id/textView119"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>