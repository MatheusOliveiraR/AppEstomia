        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/btnOq">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnpassov2"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btnpassov2"
                android:text="Texto" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnpassov2"
                android:text="Vídeo" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/mostrar1"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:background="@drawable/flecha_baixo"
        app:layout_constraintBottom_toBottomOf="@+id/btnOq"
        app:layout_constraintEnd_toEndOf="@+id/btnOq"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnOq"
        app:layout_constraintTop_toTopOf="@+id/btnOq" />

    <Button
