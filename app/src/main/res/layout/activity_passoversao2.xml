        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/btnColetora"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrolloqueE"
        android:layout_width="289dp"
        android:layout_height="105dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btnColetora"
        app:layout_constraintStart_toStartOf="@+id/btnColetora"
        app:layout_constraintTop_toBottomOf="@+id/btnColetora">

