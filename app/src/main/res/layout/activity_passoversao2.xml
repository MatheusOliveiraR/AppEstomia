    <ImageButton
        android:id="@+id/mostrarTirar2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/flecha_baixo"
        app:layout_constraintBottom_toBottomOf="@+id/btn2peca"
        app:layout_constraintEnd_toEndOf="@+id/btn2peca"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn2peca"
        app:layout_constraintTop_toTopOf="@+id/btn2peca"
        app:layout_constraintVertical_bias="0.613" />

    <ImageButton
        android:id="@+id/mostrarLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flecha_baixo"
        app:layout_constraintBottom_toBottomOf="@+id/btnLimpar"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/btnLimpar" />

    <ImageButton
        android:id="@+id/mostrarColocar"
        android:layout_width="28dp"
