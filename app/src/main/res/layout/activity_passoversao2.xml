        app:layout_constraintEnd_toEndOf="@+id/colocar1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/colocar1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/mostrarColocar2"
        android:layout_width="21dp"
        android:layout_height="31dp"
        android:background="@drawable/flecha_baixo"
        app:layout_constraintBottom_toBottomOf="@+id/colocar2"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/colocar2"
        app:layout_constraintTop_toTopOf="@+id/colocar2"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrollColocar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/colocar1"
        app:layout_constraintVertical_bias="0.0">

