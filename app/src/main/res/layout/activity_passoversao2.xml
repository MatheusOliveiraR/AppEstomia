    <ImageButton
        android:id="@+id/mostrarTirar"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/flecha_baixo"
        app:layout_constraintBottom_toBottomOf="@+id/btn1peca"
        app:layout_constraintEnd_toEndOf="@+id/btn1peca"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn1peca"
        app:layout_constraintTop_toTopOf="@+id/btn1peca"
